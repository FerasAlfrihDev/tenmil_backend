{
    "version": 2,
    "builds": [
        {
        "src": "build_files.sh",
        "use": "@vercel/static"
        },
        {
            "src": "configurations/wsgi.py",
            "use": "@ardnt/vercel-python-wsgi",
            "config": { 
                "maxLambdaSize": "15mb",
                "runtime": "python3.12" 
            }
        }
    ],
    "routes": [
        {
            "src": "/staticfiles/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "configurations/wsgi.py"
        }
    ]
}